yard = 8px
$main-color = #3b3c3f
$sup-color = #888

border-line($f, $color-line)
  background-image linear-gradient(180deg, $color-line, $color-line 50%, transparent 50%)
  background-size 100% 1px
  background-repeat no-repeat
  background-position $f left
  background-origin border-box

*
    margin 0
    padding 0
    box-sizing border-box
    font-weight 100
    font-family: 'PingFang SC'
    transition-duration .3s

::-webkit-scrollbar
    width:0px

html
    color $main-color

body
    overflow hidden

.container
    max-width 800px
    box-sizing border-box
    margin 0 auto
    padding yard
