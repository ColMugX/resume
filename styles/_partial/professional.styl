.professional
    margin 0
    margin-left 40%
    padding-left yard
    position relative
    &:after
        content ' '
        position absolute
        top 70px
        left -8px
        height 100%
        width 1px
        background-color #ddd
        animation line-vertical 1s ease backwards 4.1s

    +mobile()
        padding 0
        margin 0

.skill
.project
.experience
    padding (yard*2)
    padding-bottom 0
    +print()
        padding 0 (yard*2)

.skill
    +print()
        padding-top (yard*2)

.skill
    .skill-detail
        color $main-color
        .skill-list
            list-style none
            .skill-item
                margin-bottom (yard*2)
                .skill-name
                    font-weight 400
                    margin-top (yard)
                .skill-content
                    list-style none
                    .skill-content-item
                        line-height 1.5
                        margin (yard / 2) 0
                        font-weight 300
                        &:before
                            content '- '
        position relative
        &:after
            content ''
            position absolute
            left 0
            right 20%
            top -10px
            border-top: 1px solid #ddd
            height 1px
            +mobile()
                width 100%
.project
    .project-detail
        color $main-color
        .project-list
            list-style none
            .project-item
                margin-bottom (yard*2)
            .project-title
                margin-top (yard)
                &:before
                &:after
                    content ''
                    display table
                .project-name
                    display inline-block
                    color inherit
                    font-weight 400
                .project-tags
                    display inline-block
                    float right
                    line-height 1.2
                    margin-top (yard / 2)
                    .tags-item
                        color $sup-color
                        font-size 12px
                        margin (yard / 2) 0
                        &:before
                            content '#'
                            padding-right (yard / 3)
            .project-link
                font-size 14px
                margin-top (yard / 2)
                a
                    text-decoration none
                    font-size 14px
                    color $sup-color
                    &:hover
                        text-shadow 1px 1px 2px #bbb

            .project-summary
                list-style none
                .project-summary-item
                    font-weight 300
                    line-height 1.6
                    margin (yard / 2) 0
                    &:before
                        content '- '
        position relative
        &:after
            content ''
            position absolute
            left 0
            right 20%
            top -10px
            border-top: 1px solid #ddd
            height 1px
            +mobile()
                width 100%
.experience
    .experience-detail
        .experience-list
            list-style none
            .experience-item
                .experience-name
                    font-weight 400
                    display inline-block
                .experience-time
                    font-size 12px
                    color $sup-color
                    margin-left (yard)
                .experience-job
                    font-weight 300
                    margin (yard / 2) 0
                .experience-summary
                    list-style none
                    .experience-summary-item
                        line-height 1.6
                        margin (yard / 2) 0
                        &:before
                            content '- '

        position relative
        &:after
            content ''
            position absolute
            left 0
            right 20%
            top -10px
            border-top: 1px solid #ddd
            height 1px
            +mobile()
                width 100%
